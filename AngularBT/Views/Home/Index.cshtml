@{
    ViewBag.Title = "Home Page";
}

<div data-ng-controller="btController" class="container">
    <div class="row">

        <div class="page-header">
            <h1>angularjs binary search tree!</h1>
        </div>


        <!--PANEL FOR INSERT AND FIND VALUE-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">insert into tree and search</h3>
            </div>

            <div class="panel-body">
                <br />

                <div class="col-lg-4">
                    <div>
                        <button class="btn btn-primary" data-ng-click="insert(insertTree)">Insert Value</button>
                        <input type="text" id="insertTree" ng-model="insertTree" size="5" />
                    </div>
                    <br />
                    <div>
                        <label for="pValue">Value Inserted: </label>
                        <p id="pValue"> {{insertTree}}</p>
                    </div>


                </div>

                <div class="col-lg-4">
                    <div>
                        <button class="btn btn-primary" data-ng-click="findValue(findNode)" ng-model="got">Find Value</button>
                        <input type="text" id="findNode" ng-model="findNode" size="5" />
                    </div>
                    <br />
                    <div>
                        <label>Is it there?: </label>
                        <p id="findValue">{{got}}</p>
                    </div>

                </div>

                <div class="col-lg-4">
                    <div>
                        <button class="btn btn-primary">Find Ancestors</button>
                        <input type="text" id="ancestorsTree" size="5" />
                    </div>
                    <br />
                    <div>
                        <label>Ancestors: </label>
                        <!--place div for inorder angular update-->
                    </div>

                </div>

            </div>
        </div>
        <!--END PANEL FOR INSERT AND FIND-->

        <!--PANEL FOR TRAVERSE AND TRAVERSE DISPLAY-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">traverse the tree</h3>
            </div>

            <div class="panel-body">

                <div class="text-center">
                    <button class="btn btn-primary">Traverse Tree</button>
                </div>

            </div>
        </div>
        <!--END PANEL FOR TRAVERSE AND TRAVERSE DISPLAY-->


        <!--PANEL FOR SAVED TREES-->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">saved trees</h3>
            </div>

            <div class="panel-body">

            </div>
        </div>
        <!--END PANEL FOR SAVED TREES-->

    </div>
</div>